.post-main
  .post-main__header
    .post-main__header__left
      %h2.post-main__header__left
        = @group.name
    .menber
      %ul.post-main__header__left__menber
        - @group.users.each do |user|
          = user
    .post-main__header__right
      .post-main__header__right__edit-btn
        = link_to "Edit", edit_group_path(@group.id)
  .post-main__messages
    .post-main__messages__message
      .post-main__messages__message__info
        %p.post-main__messages__message__user
          こんにちは
        %p.post-main__messages__message__date 
          2020/05/18(Mon)00:00:00
      .post-main__messages__message__contents 
        %p.post-main__messages__message__contents__info
          test
  .post-main__form
    %form.new_message
      .input-box
        %input.input-box-text{:name   => "text", :placeholder   => "type a message",  :type => "text", :value  => ""}/
        %label.input-box-label
          =icon('fas','image')
          %input.input-box-label__file{type: "file"}
      %input.input-submit{:name => "commit", :type => "submit",:value => "send"}